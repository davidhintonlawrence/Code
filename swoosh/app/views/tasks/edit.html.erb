<!-- Validation failure messages -->

<% if @task.errors.any? %>
<% @task.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<!-- Responsive panel example -->

<!-- Add space at top -->
<div class="row">
  <hr>

  <div class="row">
    <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Edit Task #<%= @task.id %></h3>
        </div>
        <div class="panel-body">
          <form action="/update_task/<%= @task.id %>" method="post" class="form-horizontal">
            <!-- Hidden input for authenticity token to protect from forgery -->
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

            <!-- Label and input for status -->
       <!--    <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label for="status">
                  <input type="checkbox" id="status" name="status" value="1" <%= "checked" if @task.status %>>
                  Status
                </label>
              </div>
            </div>
          </div> -->

          <!-- Label and input for create_date -->
       <!--    <div class="form-group">
            <label for="create_date" class="col-sm-2 control-label">
              Create date
            </label>
            <div class="col-sm-10">
              <input type="text" id="create_date" name="create_date" placeholder="Create date" class="form-control" value="<%= @task.create_date %>">
            </div>
          </div> -->

          <!-- Label and input for description -->
          <div class="form-group">
            <label for="description" class="col-sm-2 control-label">
              Description
            </label>
            <div class="col-sm-10">
              <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @task.description %></textarea>
            </div>
          </div>


          <!-- Label and input for start_date -->
          <div class="form-group">
            <label for="start_date" class="col-sm-2 control-label">
              Start date
            </label>
            <div class="col-sm-10">
              <div class="input-group date datetimepicker">
                <input type="text" id="start_date" name="start_date" placeholder="Start date" class="form-control" value="<%= @task.start_date %>">
                <span class="input-group-addon">
                  <i class="fa fa-calendar"></i>
                </span>
              </div>
            </div>
          </div>

          <!-- Label and input for due_on -->
          <div class="form-group">
            <label for="due_on" class="col-sm-2 control-label">
              Due on
            </label>
            <div class="col-sm-10">
              <div class="input-group date datetimepicker">
                <input type="text" id="due_on" name="due_on" placeholder="Due on" class="form-control" value="<%= @task.due_on %>">
                <span class="input-group-addon">
                  <i class="fa fa-calendar"></i>
                </span>
              </div>
            </div>
          </div>


          <!-- Label and input for complete -->
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label for="complete">
                  <input type="checkbox" id="complete" name="complete" value="1" <%= "checked" if @task.complete %>>
                  Complete
                </label>
              </div>
            </div>
          </div>

          <!-- Label and input for category_id -->
          <div class="form-group">
            <label for="category_id" class="col-sm-2 control-label">
              Category
            </label>
            <div class="col-sm-10">
             <!--  <input type="text" id="category_id" name="category_id" placeholder="Category" class="form-control" value="<%= @task.category %>"> -->
             <%= select_tag(:category_id, options_from_collection_for_select(Category.all, :id, :name, @task.category_id), :class => "form-control") %>
           </div>
         </div>

